
def caracter_a_byte(caracter):

return format(ord(caracter), '08b')

def palabra_a_byte(palabra):

representacion_byte = ''
for letra in palabra:
representacion_byte += format(ord(letra), '08b') + ' '
return representacion_byte[:-1]

while True:
print("\nMenú:")
print("1. Convertir un carácter a su representación en byte")
print("2. Convertir una palabra a su representación en byte")
print("0. Salir")

opcion = input("Ingrese su opción: ")

if opcion == '1':
caracter = input("Ingrese un carácter: ")
resultado_byte = caracter_a_byte(caracter)
print(f"La representación en byte de '{caracter}' es: {resultado_byte}")

elif opcion == '2':
palabra = input("Ingrese una palabra: ")
resultado_byte = palabra_a_byte(palabra)
print(f"La representación en byte de '{palabra}' es:\n{resultado_byte}")

elif opcion == '0':
print("Saliendo del programa.")
break

else:
print("Opción no válida. Por favor, ingrese 1, 2 o 0.")


